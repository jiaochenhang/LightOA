<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.IWorkingDateInfo">
    <insert id="insert" parameterType="WorkingDateInfo">
        INSERT INTO `tbl_wdinfo`([year],[month],[day]) VALUES (#{name},#{month},#{day})
    </insert>

    <update id="update" parameterType="WorkingDateInfo">
        UPDATE `tbl_wdinfo` SET [day]=#{day}
        WHERE [year]=#{year} AND [month]=#{month}
    </update>
</mapper>