<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>service.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>info</servlet-name>
        <servlet-class>service.InfoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>attendance</servlet-name>
        <servlet-class>service.AttendanceServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>workdate</servlet-name>
        <servlet-class>service.WorkDateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>attendance</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>workdate</servlet-name>
        <url-pattern>/workdate</url-pattern>
    </servlet-mapping>
</web-app>